<h1>Task Details</h1>
  <div class="task-details">
    <h2>{{task.title}}</h2>
    <p>Description: {{task.description}}</p>
    <p>Due Date: {{task.dueDate}}</p>
    <p>Category: {{task.category.name}}</p>
  </div>
  <div class="comments-section">
    <h2>Comments</h2>
    {{#each task.comments}}
      <div class="comment">
        <p>{{this.content}}</p>
        <p>By: {{this.user.username}}</p>
        <p>Posted at: {{this.createdAt}}</p>
      </div>
    {{/each}}
  </div>

<h4>Shared with:</h4>
<ul>
  {{#each task.sharedWith}}
    <li>{{ this.name }} <a href="/tasks/{{ task._id }}/unshare/{{ this._id }}">[Unshare]</a></li>
  {{/each}}
</ul>

<!-- Form to share the task with another user -->
<form action="/tasks/{{ task._id }}/share" method="POST">
  <input type="email" name="email" placeholder="Enter user email">
  <button type="submit">Share Task</button>
</form>